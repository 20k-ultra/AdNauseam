{
    "manifest_version": 2,
    "name": "AdNauseam",
    "version": "{version}",
    "applications": {
        "gecko": {
           "id": "adnauseam@rednoise.org",
           "strict_min_version":"54.0"
        }
     },
    "commands": {
        "launch-element-zapper": {
            "description": "__MSG_popupTipZapper__"
        },
        "launch-element-picker": {
            "description": "__MSG_popupTipPicker__"
        },
        "launch-logger": {
            "description": "__MSG_popupTipLog__"
        }
    },
    "default_locale": "en",
    "description": "__MSG_extShortDesc__",
    "icons": {
        "48": "img/icon_48.png",
        "96": "img/icon_96.png",
    },
    "browser_action": {
        "browser_style": false,
        "default_icon": {
            "19": "img/browsericons/icon19.png",
            "38": "img/browsericons/icon38.png"
        },
        "default_title": "AdNauseam",
        "default_popup": "menu.html"
    },
    "author": "Daniel C. Howe",
    "background": {
        "page": "background.html"
    },
    "content_scripts":[
       {
          "matches":[
             "http://*/*",
             "https://*/*"
          ],
          "js":[
             "js/vapi.js",
             "js/vapi-client.js",
             "js/contentscript.js",
             "js/adn/textads.js",
             "js/adn/parser.js"
          ],
          "run_at":"document_start",
          "all_frames":true
       },
       {
          "matches":[
             "http://*/*",
             "https://*/*"
          ],
          "js":[
             "js/scriptlets/subscriber.js"
          ],
          "run_at":"document_idle",
          "all_frames":false
       }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "permissions": [
        "contextMenus",
        "storage",
        "tabs",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "management",
        "downloads"
    ],
    "short_name": "AdNauseam"
}
